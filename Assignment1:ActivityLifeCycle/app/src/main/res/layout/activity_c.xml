<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityC" android:background="#7EFFC107">
    <TextView
            android:text="Activity C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" android:layout_marginEnd="135dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Finish C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonCF"
            app:cornerRadius="2px" android:backgroundTint="#272323"
            android:layout_marginTop="112dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="256dp"/>
    <TextView
            android:text="Activity C occupies the complete window real-estate. The Android OS forces Activity A to be paused.However, the background thread keeps incrementing the counter.."
            android:layout_width="300dp"
            android:layout_height="145dp" android:id="@+id/textView2"
            android:textSize="20sp" android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonCF" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>